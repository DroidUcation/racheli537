<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.StartFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/bg_start_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_bg_start" />

    <TextView
        android:id="@+id/myImageViewText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/bg_start_icon"
        android:layout_alignTop="@+id/bg_start_icon"
        android:layout_alignRight="@+id/bg_start_icon"
        android:layout_alignBottom="@+id/bg_start_icon"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="@string/welcome_fragment"
        android:textColor="#000000" />

    <Button
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:onClick="gotoNextFragment"
        android:id="@+id/start_btn"
        android:layout_gravity="center" />
</FrameLayout>
