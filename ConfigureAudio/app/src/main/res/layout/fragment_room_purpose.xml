<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    tools:context="layout.NoiseFloorFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/purpose_ttl"
            android:layout_row="0"
            android:layout_columnSpan="2"
            style="@style/TitleFont"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"/>
        <RelativeLayout
            android:layout_marginTop="100dp"
            style="@style/RectLayout"
            android:layout_marginLeft="60dp"
            android:layout_gravity="left"
            android:elevation="4dp"
            android:onClick="gotoNextFragment">

            <ImageButton
                android:id="@+id/pur_5"
                style="@style/RectImage"
                android:onClick="gotoNextFragment"
                android:src="@mipmap/drums"
                />

            <TextView
                style="@style/RectDbText"
                android:text="@string/pur_1_db" />

            <TextView
                style="@style/TopRecText"
                android:text="@string/pur_1" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="100dp"
            android:layout_marginLeft="210dp"
            style="@style/RectLayout"
            android:layout_gravity="right"
            android:elevation="4dp"
            android:onClick="gotoNextFragment">

            <ImageButton
                android:id="@+id/pur_10"
                style="@style/RectImage"
                android:onClick="gotoNextFragment"
                android:src="@mipmap/speech" />

            <TextView
                style="@style/RectDbText"
                android:text="@string/pur_2_db" />

            <TextView
                style="@style/TopRecText"
                android:text="@string/pur_2" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="230dp"
            style="@style/RectLayout"
            android:layout_marginLeft="60dp"
            android:elevation="4dp"
            android:onClick="gotoNextFragment">

            <ImageButton
                android:id="@+id/pur_15"
                style="@style/RectImage"
                android:onClick="gotoNextFragment"
                android:src="@mipmap/announcements" />

            <TextView
                style="@style/RectDbText"
                android:text="@string/pur_3_db" />

            <TextView
                style="@style/TopRecText"
                android:text="@string/pur_3" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="230dp"
            android:layout_marginLeft="210dp"
            style="@style/RectLayout"
            android:elevation="4dp"
            android:onClick="gotoNextFragment">

            <ImageButton
                android:id="@+id/pur_20"
                style="@style/RectImage"
                android:onClick="gotoNextFragment"
                android:src="@mipmap/bgmusic" />

            <TextView
                style="@style/RectDbText"
                android:text="@string/pur_4_db" />

            <TextView
                style="@style/TopRecText"
                android:text="@string/pur_4" />
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>

