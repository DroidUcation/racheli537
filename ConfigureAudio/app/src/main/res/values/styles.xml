<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WellFont">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/white</item>
        <!--<item name="android:typeface">monospace</item>-->
    </style>
    <style name="TitleFont">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
        <!--<item name="android:typeface">monospace</item>-->
    </style>
    <style name="TopRecText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25px</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginTop">80dp</item>
    </style>
    <style name="RectDbText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">2dp</item>
       <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="RectImage">
        <item name="android:layout_width">@dimen/rec_img</item>
        <item name="android:layout_height">@dimen/rec_img</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">bottom</item>
        <item name="android:background">@color/button_bg</item>
    </style>
  <style name="RectLayout">
      <item name="android:layout_marginTop">@dimen/rec_top</item>
      <item name="android:layout_width">@dimen/rect</item>
      <item name="android:layout_height">@dimen/rect</item>
      <item name="android:background">@color/button_bg</item>
      <item name="android:orientation">vertical</item>
      <item name="android:layout_marginLeft">@dimen/rec_left</item>
  </style>

</resources>
